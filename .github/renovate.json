{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>promhippie/.github//renovate/preset"
    ],
    "regexManagers": [
        {
            "fileMatch": [
                "Chart.yaml"
            ],
            "matchStrings": [
                "# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>.*?))?\nappVersion: (?<currentValue>.*)"
            ]
        }
    ]
}
